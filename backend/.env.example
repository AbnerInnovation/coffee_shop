# ===========================================
# Coffee Shop Admin - Backend Configuration
# ===========================================

# Environment
# -----------
# Options: development, staging, production
ENVIRONMENT=development

# Application Settings
# --------------------
# Enable debug mode (default: False)
# Set to True for development, False for production
DEBUG=False

# Security Settings
# -----------------
# Secret key for JWT token generation (use a strong random string in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: Must be at least 32 characters long
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# Access token expiration time in minutes (default: 11520 = 8 days)
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Refresh token expiration in days (default: 7)
REFRESH_TOKEN_EXPIRE_DAYS=7


# Database Configuration
# ----------------------
# MySQL server host (e.g., localhost, 127.0.0.1, or remote host)
MYSQL_SERVER=localhost

# MySQL username
MYSQL_USER=root

# MySQL password (special characters will be automatically URL-encoded)
MYSQL_PASSWORD=your-mysql-password

# MySQL database name
MYSQL_DB=coffee_shop

# MySQL port (default: 3306)
MYSQL_PORT=3306


# Database Pool Settings
# ----------------------
# Connection pool size (default: 5)
DB_POOL_SIZE=5

# Maximum overflow connections (default: 10)
DB_MAX_OVERFLOW=10

# Pool recycle time in seconds (default: 3600 = 1 hour)
DB_POOL_RECYCLE=3600

# Enable SQL query logging (default: False)
DB_ECHO=false


# Frontend Configuration
# ----------------------
# Frontend URL for CORS configuration (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# Base domain for restaurant URLs
BASE_DOMAIN=shopacoffee.com

# Protocol for restaurant URLs (http or https)
BASE_PROTOCOL=https


# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Maximum log file size in bytes (default: 10485760 = 10MB)
LOG_FILE_MAX_BYTES=10485760

# Number of backup log files to keep (default: 5)
LOG_FILE_BACKUP_COUNT=5


# Rate Limiting
# -------------
# Enable rate limiting (default: True)
RATE_LIMIT_ENABLED=true

# Requests per minute (default: 100)
RATE_LIMIT_PER_MINUTE=100


# Redis Configuration (Optional - for future caching)
# ---------------------------------------------------
# Enable Redis caching (default: False)
REDIS_ENABLED=false

# Redis host (default: localhost)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis database number (default: 0)
REDIS_DB=0


# Sentry Configuration (Optional - for error tracking)
# ----------------------------------------------------
# Enable Sentry error tracking (default: False)
SENTRY_ENABLED=false

# Sentry DSN (Data Source Name)
SENTRY_DSN=


# Optional: SYSADMIN Creation
# ---------------------------
# These are only used by the create_sysadmin.py script
# SYSADMIN_EMAIL=admin@example.com
# SYSADMIN_PASSWORD=your-secure-password
